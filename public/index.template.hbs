<html>
	<head>
	<!---bower dependencies -->
	<script src="/bower_components/jquery/dist/jquery.min.js"> </script>
	<script src="/bower_components/handlebars/handlebars.min.js"> </script>
	<script src="/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
	<link rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap.min.css">
	<link rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap-theme.min.css">
	
	<!-- local dependencies -->
	<script src="/main.js"> </script>
	<link rel="stylesheet" href="/styling.css">

	</head>
	<body>
		<div id="request_query" class="centered well">
			<label>Search Request</label> 
			<input type="text" id="query" name="query" value="{{query}}"> <br>
			<button id="submit_button" class="btn btn-default btn-lg">Submit Request</button>
		</div>

		<div id="query_results" class="centered">  
			{{#each searchProvider}}
			<h1>{{@key}}</h1>
				<ul>
					{{#each this}}
						<li><h3><a href={{url}}>{{{title}}}</a></h3>
						{{{description}}}
						</li>
					{{/each}}
				</ul>
			{{/each}}
		</div> 
		<img id="loading_wheel" src="/loading.gif" alt="loading wheel" style="display:none; width: 50px; height: 50px:">
	</body>
	<footer> 
		
	</footer>

</html>
